// Navigation Bar

// Fetch Bot's Avatar for use.
- var botAvatar = bot.user.avatarURL()
// Check if 'user' is defined then fetch User avatar using their id and avatar hash.
if (user)
  - var userAvatar = `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}`
a(name='top')
nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  .container
    a.navbar-brand(href='/')
      img.d-inline-block.rounded-circle(src=botAvatar width='30' height='30' alt=bot.user.username)
      span.align-middle  #{bot.user.username}
    button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarColor01' aria-controls='navbarColor01' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarColor01.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href='/') Home
        li.nav-item
          a.nav-link(href='/stats') Stats 
      ul.navbar-nav
        if (user)
          li.nav-item.dropdown
            img.d-inline-block.align-middle.rounded-circle(src=userAvatar width='25' height='25' alt=user.username)
            a#userDropdown.nav-link.dropdown-toggle(href='#' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            .dropdown-menu.dropdown-menu-right(aria-labelledby='userDropdown')
              h5.dropdown-header
                i.fa.fa-user(aria-hidden='true')  Hello #{user.username}!
                .dropdown-divider
                a.dropdown-item(href='/dashboard')
                  i.fa.fa-cogs(aria-hidden='true')
                  |  Dashboard
                if (isAdmin)
                  a.dropdown-item(href='/admin')
                    i.fa.fa-user-secret(aria-hidden='true')
                    |  Admin
                .dropdown-divider
                a.dropdown-item(href='/logout')
                  i.fa.fa-sign-out(aria-hidden='true')
                  |  Logout

        else
          li.nav-item
            a.nav-link(href='/login')
              i.fa.fa-key(aria-hidden='true')
              |  Login
body
  // Flash Messages
  != messages()
  if breadcrumbs
    nav.nav-breadcrumb(style='width: 100%; margin-top: 16px;')
      .container
        ol.breadcrumb
          each crumb, index in breadcrumbs
            if index == breadcrumbs.length - 1
              li(class='breadcrumb-item active' aria-current='page') #{crumb.name}
            else
              li(class='breadcrumb-item') #[a(href=crumb.url) #{crumb.name}]
              