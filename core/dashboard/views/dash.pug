extends blocks/layout
block content  
  .container
    .jumbotron
      h1.display-3 Dashboard
      
      p.lead Welcome back #{user.username}!
      p
      | To adjust the settings for your server, click the 'Manage' button next to it's name. If you would like to add this bot to your server, click the 'Invite' button next to its name. 
      br
      | Should you not see the server's name here, make sure you are the owner of the guild you want the bot to join. If you are not the server owner, please ask the owner to add the bot for you.
      br
      i(style="color:darkred;") #[strong Due to limitations with permission handling at this time, only #[u server owners] can add this bot. Sorry about that. - Nova P. Lynxie]
      br
      for guild in user.guilds
        - let guildPerms = new Permissions(`0x${guild.permissions.toString(16)}`);
        if (guildPerms.has('MANAGE_GUILD'))
          .media(style='padding: 10px;')
            if (guild.icon)
              - iconUrl = `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}?size=128`
              img.d-flex.mr-3.rounded-circle.guild_thumb(src=iconUrl style='width: 80px' alt='')
            else
              canvas.d-flex.mr-3.rounded-circle(style='background-color: #7289da' id=guild.name.split(' ').join('').replace("'", "") width='80px' height='80px')
              script(src="public/javascripts/drawCanvas.js")
            .media-body
              h5.mt-0.mb-1 #{guild.name}
              - var href, text;
              - var enabled;
              if(bot.guilds.cache.get(guild.id)) 
                - href = `/dashboard/${guild.id}/manage`;
                - text = "Manage";
                - enabled = true;
              else
                - href = `https://discordapp.com/oauth2/authorize?client_id=${bot.application.id}&scope=bot&permissions=808844406&guild_id=${guild.id}&response_type=code&redirect_uri=${encodeURIComponent(config.callbackURL)}`;
                - text = "Invite";
                - enabled = bot.application.botPublic;
              a.btn.btn-primary(class=(!enabled)?'btn-lg-disabled':'btn-lg-enabled' role='button' href=href) #{text} 
                if (text==="Manage")
                  i.fas.fa-tasks
                else
                  i.fas.fa-sign-in-alt